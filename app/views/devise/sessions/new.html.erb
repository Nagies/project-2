<html>
  <head>
    <title></title>
  </head>
  <body>
    <div class="container">
      <h2 class="form-heading">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'form-group' %><br />
          <%= f.email_field :email, id: 'inputEmail', placeholder: 'Email address', autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'form-group' %><br />
          <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-default' %>
        </div>
      <% end %>

      <div class="form-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
</html>
