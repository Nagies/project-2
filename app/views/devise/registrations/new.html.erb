<html>
  <head>
    <title></title>
  </head>
  <body>
    <div class="container"></div>
      <h2 class="form-heading">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, class: 'form-group' %><br />
          <%= f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'form-group' %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'form-group' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-default' %>
        </div>
      <% end %>

      <div class="form-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
</html>
